<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.control.CheckBox?>
<GridPane alignment="center" hgap="10" vgap="10"
	xmlns="http://javafx.com/javafx/null"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller03.Controller03AnswerSetting">
	<padding>
		<Insets top="10" left="10" right="10" bottom="10" />
	</padding>

	<columnConstraints>
		<ColumnConstraints percentWidth="17" />
		<ColumnConstraints percentWidth="83" />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints percentHeight="4" />
		<RowConstraints percentHeight="58" />
		<RowConstraints percentHeight="38" />
	</rowConstraints>

	<HBox GridPane.rowIndex="0" GridPane.columnIndex="0">
		<Button onAction="#handlePrev" text="戻る" />
		<Pane HBox.hgrow="ALWAYS"></Pane>
		<Button onAction="#handleNext" text="進む" />
	</HBox>

	<VBox spacing="15" GridPane.rowIndex="1" GridPane.columnIndex="0"
		style="-fx-border-color:gray;-fx-border-style:dashed;">

		<padding>
			<Insets top="10" left="5" bottom="10" right="5"></Insets>
		</padding>

		<VBox>
			<Label text="マークシート設定③"
				style="-fx-font-size:20;-fx-font-weight:bold;"></Label>
			<Label text=" ◆正解設定" style="-fx-font-size:17;-fx-font-weight:bold;"></Label>
			<Label text="　～～～～～～～～～～"></Label>
			<Label text=" １．◆正解の設定は右のマークエリア上で左クリック。" wrapText="true"></Label>
			<Label text=" ２．保存する場合はファイル保存にチェックし進む。"
				wrapText="true"></Label>
			<Label text=" ３．以前保存したファイルがあれば選択し開くボタンを押す。" wrapText="true"></Label>
			<Label text=" ４．各問題番号の選択肢の正解は１つしか設定できません。。" wrapText="true"></Label>
			<Label text=" ※「 / 」未入力" wrapText="true"></Label>
			<Label text="　～～～～～～～～～～"></Label>
		</VBox>

		<VBox spacing="5">
			<HBox>
				<CheckBox fx:id="checkBoxForSavingSettingData" text="ファイル保存"
					selected="true"></CheckBox>
			</HBox>
			<TextField fx:id="textFieldForSaveName"
				promptText="ファイル名入力"></TextField>
		</VBox>
	</VBox>

	<VBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0"
		style="-fx-border-color:gray;-fx-border-style:dashed;">
		<padding>
			<Insets top="5" right="5" left="5" bottom="5" />
		</padding>
		<HBox alignment="CENTER_LEFT" spacing="10">
			<Label text="保存ファイル"></Label>
			<Button text="開く" onAction="#handleOpenFileButton"></Button>
		</HBox>
		<ListView fx:id="listViewForSaveFiles" prefHeight="300">
		</ListView>
	</VBox>

	<ScrollPane GridPane.rowIndex="0" GridPane.columnIndex="1"
		GridPane.rowSpan="3">
		<AnchorPane fx:id="anchorPane" GridPane.hgrow="ALWAYS"
			GridPane.vgrow="ALWAYS">
			<Label fx:id="labelForDoubleMark" AnchorPane.topAnchor="18"
			 AnchorPane.leftAnchor="100" textFill="RED">
				<font>
					<Font size="25"></Font>
				</font>
			</Label>
			<Circle radius="8" fill="BLACK" AnchorPane.topAnchor="18"
				AnchorPane.leftAnchor="17" />
			<Circle radius="8" fill="BLACK" AnchorPane.topAnchor="18"
				AnchorPane.leftAnchor="925" />
			<Circle radius="8" fill="BLACK" AnchorPane.topAnchor="1648"
				AnchorPane.leftAnchor="925" />
			<Circle radius="8" fill="BLACK" AnchorPane.topAnchor="1648"
				AnchorPane.leftAnchor="17" />
		</AnchorPane>
	</ScrollPane>



</GridPane>
